@model List<AntFlow.NET.Model.Mula>

@{
    ViewData["Title"] = "Lista de Mulas";
}

<div class="row">
    <h1>Mulas disponíveis</h1>
    <div class="col-md-12 col-xs-12">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Origem</th>
                    <th>Destino</th>
                    <th>Data de chegada</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var mula in Model)
                {
                    <tr>
                        <td>@mula.Nome</td>
                        <td>@mula.Origem</td>
                        <td>@mula.Destino</td>
                        <td>@mula.Data.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>